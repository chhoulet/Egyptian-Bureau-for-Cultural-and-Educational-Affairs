{% extends 'AdminBundle:Default:baseAdmin.html.twig' %}

	{% block title %}<title>{% if (affich == 1) %}Add{% else %}Edit{% endif %} a partner</title>{% endblock %}

	{% block body %}

		<div id="page-wrapper">
            <div class="row" style="background-color:#B4DEC9;">
                <div class="col-lg-12">
                    {% if (affich == 1) %}
                        <h2 class="page-header">Add a partner</h2>
                    {% else %}
                        <h2 class="page-header">Edit a partner</h2>
                    {% endif %}
                </div>
            </div>
                              
                
            <div class="container" style="margin-top:45px;">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            {{ tinymce_init() }}
                        	{{form_start(form)}}
                                {{form_row(form.name)}}                             
                            	{{form_row(form.nameArab)}}                            	
                                {{form_row(form.description)}}
                            	{{form_row(form.descriptionArab)}}
                                {{form_row(form.lien)}}
                            	{{form_row(form.brochure)}}
                            <div style="text-align:center;margin-top:30px;">
                       	        {{form_end(form)}}
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
		
    {% endblock %}