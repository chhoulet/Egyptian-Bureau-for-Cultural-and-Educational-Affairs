{% extends 'AdminBundle:Default:baseAdmin.html.twig' %}

	{% block body %}
			
        <div id="page-wrapper">
            <div class="row" style="background-color:#B4DEC9;">
                <div class="col-lg-12">
                    <h1 class="page-header">Articles published</h1>
                </div>
            </div>
                <!-- /.col-lg-12 -->

                {% for message in app.session.flashBag.get('deleteMessage') %}
                    <div class="row">
                        <div class="col-md-12" id="flash">
                            {{ message }}
                        </div> 
                    </div>                    
                {% endfor %}

                {% for messa in app.session.flashBag.get('deleteMessa') %}
                    <div class="row">
                        <div class="col-md-12" id="flash">
                            {{ messa }}
                        </div> 
                    </div>                    
                {% endfor %}

                {% for mess in app.session.flashBag.get('deleteMess') %}
                    <div class="row">
                        <div class="col-md-12" id="flash">
                            {{ mess }}
                        </div> 
                    </div>                    
                {% endfor %} 

                {% for messer in app.session.flashBag.get('succes') %}
                    <div class="row">
                        <div class="col-md-12" id="flash">
                            {{ messer }}
                        </div> 
                    </div> 
                {% endfor %}                      

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Text</th>                                        
                                <th>Publication Date</th>
                                <th>Images</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if articles is not null %}
                            	{% for article in articles %}
                                    <tr class="odd gradeX">
                                        <td>{{ article.title|upper}}</td>
                                        <td>{{ article.author|capitalize}}</td>
                                        <td>{{ article.main|raw}}</td>	                                     
                                        <td class="center">{{ article.dateCreated|date('d-m-Y')}}</td>
                                        <td>
                                            {% if article.photo is not empty %}
                                                <img src="{{ asset('uploads/photos/' ~ article.photo) }}" style="height:150px;width:250px;margin-top:15px;" alt="">
                                                <img src="{{ asset('uploads/photos/' ~ article.filename) }}" style="height:150px;width:250px;margin-top:15px;" alt="">
                                            {% endif %}
                                        </td>
                                        <td class="center"><a href="{{ path('admin_article_editArticle',{id:article.id,idOrigin:6}) }}"><p class="fa fa-pencil"> Edit </p></a>
                                        <a href="{{ path('admin_article_delete',{id:article.id}) }}" onclick="return(confirm('You are sure to want to delete this article ?'))"><p class="fa fa-times"> Delete </p></a></td>
                                    </tr>
                                {% endfor %}
                            {% endif %}                             
                        </tbody>
                    </table>
                </div>
            </div>
                    
        </div>

        <hr/>

    {% endblock %}

    