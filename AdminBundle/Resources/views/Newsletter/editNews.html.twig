{% extends 'AdminBundle:Default:baseAdmin.html.twig' %}	

    {% block title %}<title>Edit a newsletter</title>{% endblock %}

    {% block body %}
        
        <div id="page-wrapper">
            <div class="row" style="background-color:#B4DEC9;">
                <div class="col-lg-12">
                    <h2 class="page-header">Edit a newsletter</h2>
                </div>
            </div>
                              
                
            <div class="container" style="margin-top:45px;">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            {{ tinymce_init() }}
                            {{form_start(form)}}
                            {{form_row(form.title)}}
                            {{form_row(form.author)}}
                            {{form_row(form.main1)}}                            
                            {{form_row(form.main2)}}                            
                            {{form_row(form.main3)}}                            
                            {{form_row(form.article)}}                            
                            <div style="text-align:center;margin-top:45px;">
                               {{form_end(form)}}
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
		          
	
	{% endblock %}