{% extends 'AdminBundle:Default:baseAdmin.html.twig' %}

    {% block title %}<title>{% if(affich == 0) %}Add a member of the Office{% else %}Edit a member of the Office{% endif %}</title>{% endblock %}

    {% block body %}
        
        <div id="page-wrapper">
            <div class="row" style="background-color:#B4DEC9;">
                <div class="col-lg-12">
                    {% if (affich == 0) %}
                        <h1 class="page-header">Add a member of the Office</h1>
                    {% else %}
                        <h1 class="page-header">Update : {{counseillor.firstname|capitalize ~' '~ counseillor.name|upper }}</h1>
                    {% endif %}                 
                </div>
            </div>
            
                              
                
            <div class="container" style="margin-top:45px;">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            {{ tinymce_init() }}
                            {{form_start(form)}}
                            {{form_row(form.name)}}
                            {{form_row(form.nameArab)}}
                            {{form_row(form.firstName)}}
                            {{form_row(form.firstNameArab)}}
                            {{form_row(form.job)}}
                            {{form_row(form.jobArab)}}
                            {{form_row(form.phone)}}
                            {{form_row(form.fax)}}                  
                            {{form_row(form.mail)}}                 
                            {{form_row(form.description)}} 
                            {{form_row(form.descriptionArab)}}
                            {{form_row(form.hierarchicLevel)}}                             
                            {{form_row(form.image)}}                             
                            {{form_row(form.active)}} 
                                <div style="text-align:center;margin-top:35px;">
                                   {{form_end(form)}}
                                </div>
                        </div> 
                    </div>
                </div>
            </div>
        </div>

	{% endblock %}

		              

           