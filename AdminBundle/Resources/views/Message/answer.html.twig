{% extends 'AdminBundle:Default:baseAdmin.html.twig' %}

	{% block title %}<title>Send an answer</title>{% endblock %}

	{% block body %}

		<div id="page-wrapper">
            
            <div class="row" style="background-color:#B4DEC9;">
                <div class="col-lg-12">
                    <h2 class="page-header">Send an answer</h2>
                </div>
            </div><br>

            {% for mes in app.session.flashbag.get('sendMess') %}
                <div class="row">
                    <div class="col-md-12" id="flash">
                        {{ mes }}
                    </div> 
                </div>
            {% endfor %}
            
                              
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-success">
                        <div class="panel-heading">
                            Answer
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div style="text-align:center;">
                                <div class="col-md-12">                                   
                                <!-- Button trigger modal -->
                                    <button class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">
                                        Set up the form
                                    </button>                                    
                                </div>
                            </div>
                            <!-- Modal -->
                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            <h4 class="modal-title" id="myModalLabel">Message from : {% if message is not null %}{{ message.name|upper }} {% endif %}</h4>
                                        </div>
                                        <div class="modal-body">
                                            {{form_start(form)}}
                                            {{form_row(form.title)}}
                                            {{form_row(form.message)}}                                            
                                                <div style="text-align:center;margin-top:30px;">
                                                    {{form_end(form)}}
                                                </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">X</button>                                 
                                        </div>
                                    </div>
                                    <!-- /.modal-content -->
                                </div>
                                <!-- /.modal-dialog -->
                            </div>
                            <!-- /.modal -->
                        </div>
                        <!-- .panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <caption><strong>Answers list to this message</strong></caption>
                        <thead>
                            <tr>                            
                                <th>Title</th>                            
                                <th>Date sended</th>
                                <th>Text</th>                                                                                                            
                            </tr>
                        </thead>
                        <tbody>
                            {% if listAnswers is not null %}
                                {% for list in listAnswers %}
                                    <tr class="odd gradeX">                                
                                        <td>{{ list.title|upper}}</td>
                                        <td>{{ list.dateCreated|date('d-m-Y H:i')}}</td>                                
                                        <td>{{ list.message|capitalize}}</td>                                                                                   
                                    </tr>
                                {% endfor %}
                            {% endif %}                             
                        </tbody>
                    </table>
                </div>
            </div>

        </div>                
		
    {% endblock %}