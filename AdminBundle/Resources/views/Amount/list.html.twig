{% extends 'AdminBundle:Default:baseAdmin.html.twig' %}

    {% block title %}<title>Scholars fees</title>{% endblock %}

    {% block body %}

	    <div id="page-wrapper">
            <div class="row" style="background-color:#B4DEC9;">
                <div class="col-lg-12">
                    <h1 class="page-header">Scholar and exams fees</h1>
                </div>
            </div>
                <!-- /.col-lg-12 -->

            <div class="row">
                <div class="col-lg-12" style="margin-top:35px;">
                    <div class="panel panel-success">
                        <div class="panel-heading">                          
                            <p style="font-weight: bold;">Choose a school year</p>                                                       
                        </div>
                        <div class="panel-body" style="text-align:center;">
                            {{ form_start(form) }}                           
                                <div class="col-md-6 text-center">{{ form_row(form.year) }}</div>
                                <div class="col-md-6 text-center" style="margin-top:25px;">{{ form_row(form.Submit) }}</div>                                                       
                            {{ form_end(form)}}
                        </div>
                        <div class="panel-footer">                            
                        </div>
                    </div>
                </div>
            </div> 
                            
           
            <div class="row">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <figcaption><h3 style="font-weight: bold; font-size: 22px;border:1 solid black; border-radius:45px;background-color: #67db3d;text-align:center;">List years & amounts school </h3></figcaption>
                            <thead>
                                <tr>
                                    <th>Year of study</th>
                                    <th>Scholar fees</th>
                                    <th>Exam fees</th>                                   
                                    <th>Actions</th>                                                             
                                </tr>
                            </thead>
                            <tbody>
                                {% if listAmounts is not null %}
                                    {% for amount in listAmounts %}
                                       <tr class="odd gradeX">                               
                                            <td>{{ amount.scholarYear}}</td>                                           
                                            <td>{{ amount.amountToBePayed}}</td>                                           
                                            <td>{{ amount.examFees}}</td>                                                                             
                                            <td>
                                                <p><a href="{{ path('admin_amount_create',{origin:2, idAmount:amount.id}) }}" title="Update this school year"><i class="fa fa-pencil">  Update</i></a><br></p>
                                                <p><a href="{{ path('admin_amount_delete',{idAmount:amount.id}) }}" title="Delete this school year" onclick="return(confirm('Are you sure you want to delete this school year ?'))"><i class="fa fa-times">  Delete</i></a></p>
                                            </td>                                            
                                        </tr> 
                                    {% endfor %}
                                {% endif %}                             
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
                   
        </div>

        <hr/>

    {% endblock %}