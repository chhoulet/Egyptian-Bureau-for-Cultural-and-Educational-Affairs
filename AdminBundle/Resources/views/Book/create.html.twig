{% extends 'AdminBundle:Default:baseAdmin.html.twig' %}

	

    {% block title %}
        <title>
            {% if affich == 2 %}
                Add a book
            {% else %}
                Update this book
            {% endif %}
        </title>
    {% endblock %}

    {% block body %}
        
        <div id="page-wrapper">
            <div class="row" style="background-color:#B4DEC9;">
                <div class="col-lg-12">
                {% if affich == 2 %}
                    <h2 class="page-header">Add a book</h2>
                {% else %}
                    <h2 class="page-header">Update this book</h2>
                {% endif %}
                </div>
            </div>
                              
                
            <div class="container" style="margin-top:45px;">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            {{form_start(form)}}
                            {{form_row(form.title)}}
                            {{form_row(form.titleArab)}}
                            {{form_row(form.author)}}
                            {{form_row(form.authorArab)}}
                            {{form_row(form.reference)}}
                            {{form_row(form.publisher)}}
                            {{form_row(form.yearPublication)}}
                            {{form_row(form.pagesNumber)}}
                            {{form_row(form.copy)}}
                            {{form_row(form.available)}}
                            {{form_row(form.desk)}}
                            <div style="text-align:center;">
                               {{form_end(form)}}
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
		          
	
	{% endblock %}