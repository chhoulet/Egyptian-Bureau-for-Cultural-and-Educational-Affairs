{% extends 'AdminBundle:Default:baseAdmin.html.twig' %}

	{% block body %}

	 	<div id="page-wrapper">
	 		<div class="row" style="background-color:#B4DEC9;">
                <div class="col-lg-12">
                    <h1 class="page-header">Management</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div><br><br>

            {% for erreur in app.session.flashbag.get('userAd') %}
				<div class="row">
					<div class="col-md-12" id="flash">
						{{ erreur }}
					</div> 
				</div>
			{% endfor %}

			{% for erreu in app.session.flashbag.get('userDel') %}
				<div class="row">
					<div class="col-md-12" id="flash">
						{{ erreu }}
					</div> 
				</div>
			{% endfor %}

			{% for errRights in app.session.flashbag.get('userRights') %}
				<div class="row">
					<div class="col-md-12" id="flash">
						{{ errRights }}
					</div> 
				</div>
			{% endfor %}

	 		<div class="row">
		        <div class="col-lg-12">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <strong>Add admin rights</strong>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                        	<div class="col-md-12">
                        		<div class="col-md-3">
                        			{{ form_start(form)}}
                        			{{ form_row(form.username)}}
                        		</div>
                        		<div class="col-md-3">
                        			{{ form_row(form.role)}}
                        		</div>
                        		<div class="col-md-3" style="margin-top:18px;text-align:center;">
                        			{{ form_row(form.Submit,  {'attr': {'onclick': 'return confirm("Are you sure to add these rigths to this manager ?")'}}) }}
                        		</div>
                        		<div class="col-md-3" style="margin-top:18px;text-align:center;">
                        			{{ form_row(form.unSubscribe,  {'attr': {'onclick': 'return confirm("Are you sure to delete these rigths to this manager ?")'}}) }}                        			
                        			{{ form_end(form)}}
                        		</div>
                        	</div>
                        </div> 
                    </div> 
                </div> 
	        </div><br><br>
	            
            <div class="panel-body">
	            <div class="table-responsive">
	                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-exampl">
	                	<caption><strong>Admin list</strong></caption>
	                    <thead>
	                        <tr>	                            
	                            <th>Username</th>
	                            <th>Mail</th>	                                                        
	                            <th>Roles</th>	                                                        
	                        </tr>
	                    </thead>
	                    <tbody>
		                    {% if listUsers is not null %}
		                    	{% for user in listUsers %}
		                            <tr class="odd gradeX">	                            	
		                                <td>{{ user.username|capitalize }}</td>
		                                <td>{{ user.email }}</td>                                                        
		                                <td>
		                                	{% for role in user.roles %}
		                                		{{ role }}
		                                	{% endfor %}
		                                </td>  
		                            </tr>
		                        {% endfor %}
		                    {% endif %}                              
	                    </tbody>
	                </table>
	            </div>
	        </div>                 	          

        </div>

	 {% endblock %}