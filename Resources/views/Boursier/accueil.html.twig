{% extends '::baseBoursier.html.twig' %}

	{% block body %}
		
		<div class="container">			

            <!-- <div class="row">
                <div class="box">
                    <div class="col-md-12"> -->                        
                            <!-- Embedded Google Map using an iframe - to select your location find it on Google maps and paste the link as the iframe src. If you want to use the Google Maps API instead then have at it! -->
                           <!--  <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?hl=en&amp;ie=UTF8&amp;ll=51.511214, -0.119824&amp;spn=56.506174,79.013672&amp;t=m&amp;z=12&amp;output=embed"></iframe>
                    </div>
                </div> 
            </div> -->

            <div class="row">
                <div class="box" style="text-align:justify;">
                    <div class="col-md-12">
                        {% if listArticles is not null %}
                            {% for article in listArticles %}       
                                <hr>
                                    <h2 class="intro-text text-center">{{ article.title|capitalize }}<br><br>
                                        <strong>
                                            {% if (article.author is not null) %}
                                                {{ article.author|upper }}
                                            {% endif %}
                                        </strong>                                                                                                     
                                    </h2>
                                <hr>
                                
                                {% if (article.filename is not null) %}                    
                                    <img style="height:380px;width:570px;margin-bottom:35px;" class="img-responsive img-border img-full" src="{{ asset('uploads/photos/' ~ article.filename) }}" alt=""/><br>
                                {% endif %}

                                {% if (article.photo is not null) %}                    
                                    <img style="height:110px;width:170px;" class="img-responsive img-border img-left" src="{{ asset('uploads/photos/' ~ article.photo) }}"/>
                                {% endif %}
                                      
                                <hr class="visible-xs">
                                <p style="overflow:auto;">{{ article.main|raw }}</p> <br><br>      
                                                                                              
                            {% endfor %}                                                                      
                        {% endif %}
                    </div>
                </div>
            </div>          

            <hr/><br> 

            <div class="row">                
                {% if listForms is not null %}
                    {% for listForm in listForms %}
                        <div class="col-md-6">
                            <div class="panel panel-info">
                                <div class="panel-heading">
                                    {{ listForm.name|upper }}
                                </div>
                                <div class="panel-body">
                                    <p>{{ listForm.description }}</p>
                                </div>
                                <div class="panel-footer">
                                    <p><a href="{{ asset('uploads/documents/' ~ listForm.file) }}" target="_blank">تحميل</a></p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}                  
            </div>                       
        </div>

        <hr/>

	{% endblock %}