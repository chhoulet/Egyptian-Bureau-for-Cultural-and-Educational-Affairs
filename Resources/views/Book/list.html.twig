{% extends '::base.html.twig' %}

	{% block body %}

		<div class="container">

            <div class="flash">
            	{% for message in app.session.getFlashbag('deleteMess') %}
            		{{ message }}
            	{% endfor %}
            </div>

            <div class="row">
                <div class="box">
                    <div class="col-lg-12">
                        <hr>
                        <h2 class="intro-text text-center">
                            <strong>Library</strong>
                        </h2>
                        <hr>
                    </div>
                </div>
            </div>
                   

            
            <!-- /.row -->
            <div class="row">
                <div class="col-md-12"> 
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Books : {{ nbrBooks }}
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Author</th>
                                        <th>Reference</th>
                                        <th>Editor</th>
                                        <th>Publication date</th>
                                        <th>Page Number</th>
                                        <th>Copy number</th>
                                        <th>Disponibility</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% if listBooks is not null  %}
                                    	{% for book in listBooks %}
    	                                    <tr class="odd gradeX">
    	                                        <td>{{ book.title|capitalize }}</td>
                                                <td>{{ book.author|upper }}</td>
                                                <td>{{ book.reference }}</td>
                                                <td class="center">{{ book.publisher|capitalize }}</td>
                                                <td class="center">{{ book.yearPublication|date('Y') }}</td>
                                                <td>{{ book.pagesNumber}}</td>
    	                                        <td>{{ book.copy}}</td>
                                                <td>
                                                    {% if(book.desk == true) %}
                                                        <p style="color:green;">Available</p> 
                                                    {% else %}
                                                        <p style="color:red;">Not Available</p>
                                                    {% endif %}
                                                </td>
    	                                    </tr>
    	                                {% endfor %}
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <hr/>

    {% endblock %}

    
