{% extends '::baseArab.html.twig' %}

	{% block body %}

		<div class="container">            

            <div class="row">
                <div class="box">
                    <div class="col-lg-12">
                        <hr>
                        <h2 class="intro-text text-center">المكتبة
                            <strong>مؤلفون عرب وأجانب</strong>
                        </h2>
                        <hr>
                    </div>
                </div>
            </div>
                   

            
            <!-- /.row -->
            <div class="row">
                <div class="col-md-12"> 
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            عدد الكتب : {{ nbrBooks }}
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>التوافر</th>
                                        <th>عدد النسخ</th>
                                        <th>عدد الصفحات</th>
                                        <th>تاريخ النشر</th>
                                        <th>الناشر</th>
                                        <th>المعرّف المرجعي</th>
                                        <th>المؤلف</th>
                                        <th>العنوان</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% if listBooks is not null %}
                                    	{% for listBook in listBooks %}                                        
        	                                    <tr class="odd gradeX">                                            
        	                                        <td>
                                                        {% if (listBook.desk == true) %}
                                                            <p style="color:green;">Disponible</p> 
                                                        {% else %}
                                                            <p style="color:red;">Non disponible</p>
                                                        {% endif %}
                                                    </td>                                           
                                                    <td>{{ listBook.copy}}</td>
                                                    <td>{{ listBook.pagesNumber}}</td>
                                                    <td class="center">{{ listBook.yearPublication|date('Y') }}</td>
                                                    <td class="center">{{ listBook.publisher|capitalize }}</td>
                                                    <td>{{ listBook.reference }}</td>
                                                    <td>{{ listBook.authorArab|upper }}</td>
                                                    <td>{{ listBook.titleArab|capitalize }}</td>
        	                                    </tr>                                        
    	                                {% endfor %}
                                    {% endif %}                              
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <hr/>

    {% endblock %}

    
