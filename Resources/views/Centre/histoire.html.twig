{% extends '::baseCentre.html.twig' %}

	{% block title %}{% endblock %}


		{% block body %}
			<div class="container">
				<div class="row">
		            <div class="box" style="text-align:justify;">
		                <div class="col-lg-12">
		                    <hr>
		                    <h2 class="intro-text text-center">History of the
		                        <strong>Cultural Center</strong>
		                    </h2>
		                    <hr>
		                    {% if histoires is not null %}
			                    {% for histoire in histoires %}
				                    <img class="img-responsive img-border" src="{{ asset('uploads/photos/' ~ histoire.photo) }}" alt="">
				                    <hr  class="visible-xs"><br>
				                    	<p>{{ histoire.main|raw }}</p>
			                	{% endfor %}
			                {% endif %}
		                </div>
		            </div>
	        	</div>
	        </div>

		{% endblock %}