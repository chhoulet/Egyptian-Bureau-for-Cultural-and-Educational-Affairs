{% extends '::baseCentre.html.twig' %}

	{% block title %}<title>Welcome in Cultural Center</title>{% endblock %}

		{% block body %}

			<div class="container">
					<div class="row">
			            <div class="box">
			                <div class="col-lg-12">
			                    <hr>
			                    <h2 class="intro-text text-center"><p><strong>Activities</strong></p>			                        
			                    </h2>
			                    <hr>
			                    
			                    <hr class="visible-xs">			                    
			                    	<p> Come to discover the numerous activities proposed by the Cultural Center</p>
			                    	<p style="text-align:center;"><a href="{{ path('article_centre_culturel_oldActivites') }}"><button class="btn btn-success">Old activities</button></a>
		                        </p>
			                </div>
			            </div>
		        	</div>

		        {% if activites is not null %}
					{% for activite in activites %}
						<div class="row">
				            <div class="box">
				                <div class="col-lg-12">				                    
				                    <h2 class="intro-text text-center"><p>{{ activite.title }}</p>
				                        <strong>{{ activite.subject }}</strong>
				                    </h2>
				                    <hr>
				                   
				                    <hr class="visible-xs">			                    
				                    	<p>{{ activite.main|raw }}</p>
				                </div>
				            </div>
			        	</div>
				    {% endfor %}
				{% endif %}
	        </div>


		{% endblock %}

		