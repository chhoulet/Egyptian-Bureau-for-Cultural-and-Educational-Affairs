{% extends '::baseCentreArab.html.twig' %}	

	{% block body %}
		<div class="container">
			<div class="row">
	            <div class="box" style="text-align:right;">
	                <div class="col-lg-12">
	                    <hr>
	                    <h2 class="intro-text text-center">تاريخ 
	                        <strong>المركز الثقافي المصري</strong>
	                    </h2>
	                    <hr>
	                    {% if histoires is not null %}
		                    {% for histoire in histoires %}
			                    <img class="img-responsive img-border" src="{{ asset('uploads/photos/' ~ histoire.photo) }}" alt="">
			                    <hr  class="visible-xs"><br><br>
			                    	<p>{{ histoire.mainArab|raw }}</p>
		                	{% endfor %}
		                {% endif %}
	                </div>
	            </div>
        	</div>
        </div>
	{% endblock %}