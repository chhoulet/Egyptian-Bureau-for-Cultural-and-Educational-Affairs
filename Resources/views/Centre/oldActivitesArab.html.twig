{% extends "::baseCentreArab.html.twig" %}

	{% block body %}
		
		<div class="container">

			<div class="row">
                <div class="box">
                    <div class="col-lg-12">
                        <hr>
                        <h2 class="intro-text text-center">
                            <strong>النشاطات السابقة للمركز الثقافي</strong>
                        </h2>
                        <hr>
                    </div>
                </div>	            
	        
	        {% if oldActivites is not null %}
		        {% for activite in oldActivites %}
			       		        	
					<div class="col-lg-12" style="text-align:right;">
	                    <div class="panel panel-warning">
	                        <div class="panel-heading" style="text-align:center;">
	                            <strong>{{ activite.titleArab|upper }}</strong>
	                        </div>
	                        <div class="panel-body">
	                            <p>{{ activite.subjectArab|capitalize }}</p>
	                            <p>{{ activite.mainArab|raw }}</p>
	                        </div>	                        		                        
	                    </div>
	                </div>		           
			        	       
		        {% endfor %}
		    {% endif %}

	    </div>

    {% endblock %}