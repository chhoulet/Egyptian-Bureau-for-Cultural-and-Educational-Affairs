{% extends "::baseCentre.html.twig" %}

	{% block body %}
		
		<div class="container">

			<div class="row">
                <div class="box">
                    <div class="col-lg-12">
                        <hr>
                        <h2 class="intro-text text-center">
                            <strong>Old Activities</strong>
                        </h2>
                        <hr>
                    </div>
                </div>	            
	        </div>

	        {% if oldActivites is not null %}
		        {% for activite in oldActivites %}
				    <div class="row">
				    	<div class="box">  		        	
							<div class="col-lg-12" style="text-align:justify;">
			                    <div class="panel panel-warning">
			                        <div class="panel-heading" style="text-align:center;">
			                            <strong>{{ activite.title|upper }}</strong>
			                        </div>
			                        <div class="panel-body">		                        
			                            <p>{{ activite.subject|capitalize }}</p>
			                            <p>{{ activite.main|raw }}</p>
			                        </div>	                        		                        
			                    </div>
			                </div>
			            </div>		           
				    </div>   		       
		        {% endfor %}
		    {% endif %}

	    </div>

    {% endblock %}