{% extends '::baseCentreArab.html.twig' %}

	{% block title %}<title>الصفحة الرئيسية للمركز الثقافي</title>{% endblock %}

		{% block body %}

			<div class="container">
					<div class="row">
			            <div class="box">
			                <div class="col-lg-12">
			                    <hr>
			                    <h2 class="intro-text text-center"><p><strong>نشاطات</strong></p>			                        
			                    </h2>
			                    <hr>
			                    <img class="img-responsive img-border img-left" src="img/intro-pic.jpg" alt="">
			                    <hr class="visible-xs">			                    
			                    	<p>دروس اللغة العربية، محاضرات، ندوات، مؤتمرات، أهلاً بمشاركاتكم واقتراحاتكم</p>
			                    	<p style="text-align:right;"><a href="{{ path('article_centre_culturel_oldActivites_arabe') }}"<button class="btn btn-success">النشاطات السابقة</button></a>
		                        </p>
			                </div>
			            </div>
		        	</div>

		        {% if activites is not null %}
					{% for activite in activites %}
						<div class="row">
				            <div class="box">
				                <div class="col-lg-12">
				                    <hr>
				                    <h2 class="intro-text text-center"><p>{{ activite.titleArab }}</p>
				                        <strong>{{ activite.subjectArab }}</strong>
				                    </h2>
				                    <hr>
				                    <img class="img-responsive img-border img-left" src="img/intro-pic.jpg" alt="">
				                    <hr class="visible-xs">			                    
				                    	<p>{{ activite.mainArab }}</p>
				                </div>
				            </div>
			        	</div>
				    {% endfor %}
				{% endif %}
	        </div>


		{% endblock %}

		