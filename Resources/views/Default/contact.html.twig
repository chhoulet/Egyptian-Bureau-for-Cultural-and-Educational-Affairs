{% extends '::base.html.twig' %}

	{% block title %}
		<title>Contactez-nous !</title>
	{% endblock %}


	{% block body %}

	    <div class="container">

	        <div class="row">
	            <div class="box">
	                <div class="col-lg-12">
	                    <hr>
	                    <h2 class="intro-text text-center">Come to 
	                        <strong>Egypt Embassy</strong>
	                    </h2>
	                    <hr>
	                </div>
	                <div class="col-md-8">
	                    <!-- Embedded Google Map using an iframe - to select your location find it on Google maps and paste the link as the iframe src. If you want to use the Google Maps API instead then have at it! -->
	                    <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?hl=en&amp;ie=UTF8&amp;ll=51.5067216817,-0.149107742877&amp;spn=56.506174,79.013672&amp;t=m&amp;z=18&amp;output=embed"></iframe>            
	                </div>	              
	                <div class="col-md-4">
	                   <h3>Bureau Cultural UK</h3>
	                    <p>Landline:
	                        <strong>+44 20 7491 7720</strong>
	                    </p>
	                    <p>Fax:
	                        <strong>+44 20 7629 5634</strong>
	                    </p>
	                    <p>Mail:
	                        <strong><a href="mailto:administration@egyculture.org.uk">administration@egyculture.org.uk</a></strong>
	                    </p>
	                    <p>Address Bureau cultural:</p>
	                    <p><strong>4 Chesterfield Gardens, Mayfair<br>
	                    	Postcode : W1J 5BG
	                    	London
	                    	</strong>
	                    </p>
	                    <p>Mail school:
	                        <strong><a href="mailto:school@egyculture.org.uk">school@egyculture.org.uk</a></strong>
	                    </p>
	                    <p>Landline school:
	                        <strong>+44 20 7491 7720</strong>
	                    </p>
	                    <p>Fax school:
	                        <strong>+44 20 7629 5634</strong>
	                    </p>
	                    <p>Address School :</p>
	                    <p><strong>24 Haverstock Hill School - Chalk Farm<br>
	                        Postcode : NW3 2BQ
	                        London
	                        </strong>
	                    </p>
	                </div>
	                <div class="clearfix"></div>
	            </div>
	        </div>

	        <div class="row">
	            <div class="box">
	                <div class="col-lg-12">
	                    <hr>
	                    <h2 class="intro-text text-center"> 
	                        <strong>Contact us !</strong>
	                    </h2>
	                    <hr>
	                    <p>A question ? A remark ? Information or suggestions ? Do not hesitate to contact us thanks to this form, we shall answer you as soon as possible.</p>
	                    {{ form_start(form) }}
	                        <div class="row">
	                            <div class="col-lg-3">
	                                
										{{ form_row(form.name) }}
	                               
	                            </div>
	                            <div class="col-lg-3">
	                               
										{{ form_row(form.title) }}
	                               
	                            </div>
	                            <div class="col-lg-3">
	                                
										{{ form_row(form.mail) }}
	                                
	                            </div>
	                            <div class="col-lg-3">
	                                
										{{ form_row(form.receiver) }}
	                                
	                            </div>
	                            <div class="clearfix"></div>
	                            
	                            <div class="col-lg-12" style="marginauto;">
	                                	{{ form_row(form.message) }}
	                            </div>
	                            <div class="col-lg-11" style="margin-top:45px;">
	                                <div type="hidden" name="save" value="contact" style="margin-left:500px;">
										{{ form_end(form) }}
	                                </div>	                                
	                            </div>
	                        </div>
	                </div>
	            </div>
	        </div>

	    </div>
	    <!-- /.container -->

	    <hr/>

	{% endblock %}
    