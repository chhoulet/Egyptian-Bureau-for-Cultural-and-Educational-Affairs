{% extends '::base.html.twig' %}	

    {% block body %}
		<div class="container">

        	{% for message in app.session.flashBag.get('succesMail') %}
        		<div class="row">
                        <div class="col-md-12" id="flash">
                            {{ message }}
                        </div> 
                    </div>   
        	{% endfor %}

        	{% for messa in app.session.flashBag.get('unSubscribe') %}
        		<div class="row">
                        <div class="col-md-12" id="flash">
                            {{ messa }}
                        </div> 
                    </div>   
        	{% endfor %}			

        	{% for mes in app.session.flashBag.get('Subscriber') %}
        		<div class="row">
                        <div class="col-md-12" id="flash">
                            {{ mes }}
                        </div> 
                    </div>   
        	{% endfor %}		        		        	

        	{% for me in app.session.flashBag.get('errorMail') %}
        		<div class="row">
                        <div class="col-md-12" id="flash">
                            {{ me }}
                        </div> 
                    </div>   
        	{% endfor %}

        	{% for mess in app.session.flashBag.get('succes') %}
        		<div class="row">
                        <div class="col-md-12" id="flash">
                            {{ mess }}
                        </div> 
                    </div>   
        	{% endfor %}
		        	
	        <div class="row">
	            <div class="box">
	                <div class="col-lg-12 text-center">
	                    <div id="carousel-example-generic" class="carousel slide">
	                        <!-- Indicators -->
	                        <ol class="carousel-indicators hidden-xs">
	                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
	                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
	                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
	                        </ol>

	                        <!-- Wrapper for slides -->
                        	<div class="carousel-inner">
		                       {% if  articl is not null and articl.photo is not null %}
		                            <div class="item active">
		                                <a href="#{{articl.id}}"><img class="img-responsive img-full" src="{{ asset('uploads/photos/' ~ articl.photo) }}" alt=""></a>
		                            </div>
	                            {% endif %}
                        	</div>

	                        <!-- Controls -->
	                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
	                            <span class="icon-prev"></span>
	                        </a>
	                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
	                            <span class="icon-next"></span>
	                        </a>
	                    </div>
	                    		                    

		                    <h2 class="brand-before">
		                        <small>Welcome to</small>
		                    </h2>
		                    <h1 class="brand-name">Egyptian Bureau for Cultural and Educational Affairs</h1>
		                    <hr class="tagline-divider">			                    						        	
	                </div>
	            </div>
	        </div>
				

	        {% if articlesSelected is not empty and articlesSelected is not null %}
				{% for article in articlesSelected %}
					{% if article is not null %}
				        <div class="row" id="{{article.id}}">
				            <div class="box" style="text-align:justify;">
				                <div class="col-lg-12">
				                    <hr>
				                    <h2 class="intro-text text-center" id="article">{{ article.title|upper }}
									    <strong>
											{% if (article.author is not null) %}
		                       					by	{{ article.author|capitalize }}<br>
		                       				{% endif %}
		                       			</strong>												
				                       published on {{ article.dateCreated|date('d-m-Y')}}                
				                    </h2>
				                    <hr>
				                    	{% if (article.filename is not null) %}                    
				                    		<img style="height:380px;width:570px;margin-bottom:35px;" class="img-responsive img-border img-full" src="{{ asset('uploads/photos/' ~ article.filename) }}" alt=""/><br>
				                    	{% endif %}

				                    	{% if (article.photo is not null) %}
				                    		<div class="image">
				                    			<img style="height:110px;width:170px;" class="img-responsive img-border img-left" src="{{ asset('uploads/photos/' ~ article.photo) }}"/>
				                    		</div>
				                    	{% endif %}
				                              
					                    <hr class="visible-xs">
					                    <p style="overflow:auto;">{{ article.main|raw }}</p>			                    	
				                </div>			              
				            </div>
				        </div>
				    {% endif %}
			    {% endfor %}
			{% endif %}

		    <div style="margin-top:30px;margin-bottom:30px;text-align:center;">
		    	<a href="{{ path('article_article_list',{idLang:1}) }}"><button class="btn btn-warning btn-lg">See the list</button></a>
		    </div>


	        <div class="row">
	            <div class="box">
	                <div class="col-lg-12">
	                    <hr>
		                    <h2 class="intro-text text-center">Subscribe 
		                        <strong>to our newsletter</strong>
		                    </h2>
	                    <hr>
	                    <p>To subscribe to our newsletter, please enter your email address below.</p>
	                    <p>{{ form_start(form) }}</p>
	                    <div class="col-md-3 text-center"><p>{{ form_row(form.mail) }}</p></div>		                    
	                    <div class="col-md-2 text-center"><p>{{ form_row(form.name) }}</p></div>		                    
	                    <div class="col-md-2 text-center"><p>{{ form_row(form.firstname) }}</p></div>		                    
	                    <div class="col-md-2 text-center"><p>{{ form_row(form.job) }}</p></div>		                    
	                    <div class="col-md-3 text-center"><p>{{ form_row(form.event) }}</p></div>		                    
	                    <div class="col-md-6 text-center" style="margin-top:17px;"><p>{{ form_row(form.Submit) }}</p></div>
	                    <div class="col-md-6 text-center" style="margin-top:17px;" title="Saisissez votre mail et cliquez ici"><p>{{ form_end(form) }}</p></div>
	                </div>
	            </div>
	        </div>

		</div>

	</div>
		    <!-- /.container -->		    

    {% endblock %}


