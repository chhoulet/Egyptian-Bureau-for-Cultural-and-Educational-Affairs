{% extends '::baseSchool.html.twig' %}

	{% block title %}Old activities{% endblock %}

	{% block body %}

		<div class="container">

			{% if schoolActivities is not null and schoolActivities is not empty %}
				{% for activity in schoolActivities %}						
		            <div class="box" style="text-align:justify;">
		                <div class="col-lg-12">
		                    <hr>
		                    <h2 class="intro-text text-center" id="activity">{{ activity.title|upper }}
								   <strong>
										{% if (activity.author is not null) %}
	                       					by	{{ activity.author|capitalize }}<br>
	                       				{% endif %}
	                       			</strong>												
		                        published the {{ activity.dateCreated|date('d-m-Y')}}                
		                    </h2>
		                    <hr>
		                    	{% if (activity.filename is not null) %}                    
		                    		<img style="height:380px;width:570px;margin-bottom:35px;" class="img-responsive img-border img-full" src="{{ asset('uploads/photos/' ~ activity.filename) }}" alt=""/><br>
		                    	{% endif %}

		                    	{% if (activity.photo is not null) %}                    
		                    		<img style="height:110px;width:170px;" class="img-responsive img-border img-left" src="{{ asset('uploads/photos/' ~ activity.photo) }}"/>
		                    	{% endif %}
		                              
			                    <hr class="visible-xs">
			                    <p style="overflow:auto;">{{ activity.main|raw }}</p>			                    	
		                </div>			              
		            </div>
		        {% endfor %}
		    {% else %}
		    	<div class="box" style="text-align:justify;">
		            <div class="col-lg-12">
		            	<p>No old acivities yet !</p>
		            </div>
		        </div>
		    {% endif %}

		
	{% endblock %}