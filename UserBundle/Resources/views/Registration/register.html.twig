{% extends 'baseUser.html.twig' %}

	{% block fos_user_content %}

		<div class="container">
	        <div class="row">
	            <div class="col-md-4 col-md-offset-4">
	                <div class="login-panel panel panel-success">
	                    <div class="panel-heading">
	                        <h3 class="panel-title">Add a scholar :</h3>
	                    </div>
	                    <div class="panel-body">
	                    	{% trans_default_domain 'FOSUserBundle' %}
								{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
								    {{ form_row(form.email,{'label':'Email',
								    						'attr':{'class':'form-control'}}) }}
								    {{ form_row(form.username,{'label':'Username',
								    						'attr':{'class':'form-control'}}) }}
								    {{ form_row(form.plainPassword.first,{'label':'Password',
								    						'attr':{'class':'form-control'}}) }}
								    {{ form_row(form.plainPassword.second,{'label':'Repeat the password',
								    						'attr':{'class':'form-control'}}) }}
								    <div>								    	
								        <input type="submit" value="Create an account" style="margin-left:100px;margin-top:25px;" class="btn btn-info" />
								    </div>
								{{ form_end(form) }}
                    	</div> 
					</div> 
				</div> 
			</div>
		</div>

	{% endblock fos_user_content %}

	{% block footer %}{% endblock %}
		